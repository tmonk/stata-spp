{
  "name": "stata-spp",
  "version": "1.1.0",
  "description": "Stata for Public Policy",
  "repository": "github:tmonk/stata-spp",
  "homepage": "https://stata.jeremiahdittmar.info/",
  "author": "Tessa Hall, Thomas Monk & Jeremiah Dittmar",
  "license": "Creative Commons Attribution-NonCommercial 4.0 International (CC BY-NC 4.0)",
  "bugs": "https://github.com/tmonk/stata-spp/issues",
  "spelling": "cSpell:ignore HTMLTEST precheck postbuild -",
  "scripts": {
    "_build:docsy": "cd themes/docsy && npm install && npm run _prepare",
    "_build": "npm run _build:docsy && npm run _hugo-dev",
    "_hugo": "hugo --cleanDestinationDir",
    "_hugo-dev": "npm run _hugo -- -e dev -DFE",
    "_serve": "npm run _hugo-dev -- --minify serve",
    "build:preview": "npm run _build:docsy && npm run _hugo-dev -- --minify --baseURL \"${DEPLOY_PRIME_URL:-/}\"",
    "build:production": "npm run _build:docsy && npm run _hugo -- --minify",
    "build": "npm run _build",
    "check:links:all": "HTMLTEST_ARGS= npm run _check:links",
    "check:links": "npm run _check:links",
    "clean": "rm -Rf public/* resources",
    "make:public": "git init -b main public",
    "precheck:links:all": "npm run build",
    "precheck:links": "npm run build",
    "postbuild:preview": "npm run _check:links",
    "postbuild:production": "npm run _check:links",
    "serve": "npm run _serve",
    "test": "npm run check:links",
    "update:pkg:dep": "npm install --save-dev autoprefixer@latest postcss@latest postcss-cli@latest",
    "update:pkg:hugo": "npm install --save-dev --save-exact hugo-extended@latest"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}